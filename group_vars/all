---

mysql_version: 5.7

redis_unixsocket: /var/run/redis/redis.sock
redis_unixsocketperm: 660
redis_save: false
redis_maxmemory: 64MB
redis_maxmemory_policy: allkeys-lru

phpfpm_install:
  - php70u-cli
  - php70u-fpm
  - php70u-mysqlnd
  - php70u-opcache
  - php70u-xml
  - php70u-mcrypt
  - php70u-gd
  - php70u-devel
  - php70u-intl
  - php70u-mbstring
  - php70u-bcmath
  - php70u-json
  - php70u-opcache

httpd_vhosts:

 - address: _default_
   name: 00-default-site
   phpfpm_pool: default
   https: on

 - address: '*'
   name: example.com
   alias: www.example.com
   phpfpm_pool: magento
   https: on
   https_proxypass: on
   proxypass_address: http://127.0.0.1:80/

phpfpm_pools:

  - name: magento
    process_user: php-fpm
    listen_owner: root
    listen_group: apache
    slowlog_timeout: 15
    terminate_timeout: 30
    fastcgi_timeout: 35

  - name: magento_admin
    process_user: php-fpm
    listen_owner: root
    listen_group: apache
    slowlog_timeout: 600
    terminate_timeout: 900
    fastcgi_timeout: 905

phpfpm_default_pool: false

phpfpm_opcache_memory_consumption: 256
phpfpm_opcache_interned_strings_buffer: 16
phpfpm_opcache_max_accelerated_files: 10000
